<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/darkgrey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/picture_daiict"/>

        <TextView
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_below="@id/image"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:background="@color/darkgrey"/>

    <LinearLayout
        android:id="@+id/userDetail"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginText"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_background">

        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter your email"
            android:id="@+id/editTextEmail"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/custom_email_logo"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/custom_detail"/>
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter your Password"
            android:id="@+id/editTextPassword"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/custom_password_logo_file"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/custom_detail"/>
        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_common"
            android:text="Login"
            android:textColor="@color/white" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/userDetail">

            <TextView
                android:id="@+id/textViewSignup"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not have an account? Sign up here"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/textViewCanteenLogin"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login As a Canteen Staff"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/forgetPassword"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password? Reset"
                android:textColor="@color/white"
                android:textAlignment="center"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>